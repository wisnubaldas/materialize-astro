---
import Auth from "@layouts/Auth.astro";
---

<Auth title='Unauthorized'>
  <!-- Not Authorized -->
  <div class='misc-wrapper'>
    <h1 class='mb-2 mx-2' style='font-size: 6rem'>401</h1>
    <h4 class='mb-2'>You are not authorized! 🔐</h4>
    <p class='mb-2 mx-2'>You don’t have permission to access this page. Go Home!</p>
    <div class='d-flex justify-content-center mt-5'>
      <div class='d-flex flex-column align-items-center'>
        <img
          src='/img/illustrations/misc-not-authorized-illustration.png'
          alt='misc-not-authorized'
          class='img-fluid z-1'
          width='160'
        />
        <div>
          <a href='/' class='btn btn-primary text-center my-4'>Back to home</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /Not Authorized -->
</Auth>
