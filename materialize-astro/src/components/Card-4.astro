---
const {
  jumlah,
  nama,
  persen,
  ket,
  icon = "mdi mdi-bus-school mdi-20px",
} = Astro.props;
---

<div class="col-sm-6 col-lg-3 mb-4">
  <div class="card card-border-shadow-primary h-100">
    <div class="card-body">
      <div class="d-flex align-items-center mb-2 pb-1">
        <div class="avatar me-2">
          <span class="avatar-initial rounded bg-label-primary"
            ><i class={icon}></i></span
          >
        </div>
        <h4 class="ms-1 mb-0 display-6">{jumlah}</h4>
      </div>
      <p class="mb-0 text-heading">{nama}</p>
      <p class="mb-0">
        <span class="me-1">{persen}</span>
        <small class="text-muted">{ket}</small>
      </p>
    </div>
  </div>
</div>
